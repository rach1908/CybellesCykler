<Window x:Class="CybellesCykler.AddBike"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CybellesCykler"
        mc:Ignorable="d"
        Title="Add Bike" Height="200" Width="350">
  <Grid>
    <TextBox x:Name="tbxBikeDescription" HorizontalAlignment="Left" Height="23" Margin="31,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    <TextBox x:Name="tbxPricePerDay" HorizontalAlignment="Left" Height="23" Margin="31,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    <Label Content="Bike Description" HorizontalAlignment="Left" Margin="206,24,0,0" VerticalAlignment="Top"/>
    <Label Content="Price per day&#xD;&#xA;" HorizontalAlignment="Left" Margin="206,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.404,0.351"/>
    <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="52,125,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
    <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="210,125,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
  </Grid>
</Window>
